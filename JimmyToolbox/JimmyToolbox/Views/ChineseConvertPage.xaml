<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="JimmyToolbox.Views.ChineseConvertPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:JimmyToolbox.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid Padding="0,0,0,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid x:Name="HeaderGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="204" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--<controls:HomePageHeaderImage
            Grid.RowSpan="2"
            Height="396"
            VerticalAlignment="Top" />-->
                <Image Source="/Assets/ChineseHeroImage.webp" Stretch="UniformToFill" />
                <Grid Background="Black" Opacity="0.5" />
                <TextBlock AutomationProperties.AutomationId="__ClickableAreaTextBlock" />
                <StackPanel
                    Margin="36,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="smallHeaderSubtitleText"
                        FontSize="18"
                        Foreground="White"
                        Opacity="0.8"
                        Text="Conversion between Traditional and Simplified Chinese" />
                    <TextBlock
                        x:Name="smallHeaderText"
                        x:Uid="ChineseConverter"
                        Foreground="White"
                        Style="{StaticResource TitleLargeTextBlockStyle}"
                        Text="Chinese Converter" />
                </StackPanel>
            </Grid>
            <Grid
                Grid.Row="1"
                Margin="36,28,36,28"
                Padding="24"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="{ThemeResource ButtonBackground}"
                BorderBrush="{ThemeResource MediaTransportControlsBorderBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock x:Uid="From" Text="From" />
                        <TextBox
                            x:Name="SourceChineseTextBox"
                            Grid.Row="1"
                            MaxHeight="228"
                            Margin="0,4,0,0"
                            VerticalAlignment="Stretch"
                            AcceptsReturn="True"
                            TextWrapping="Wrap" />
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Uid="To"
                            Margin="0,16,0,0"
                            Text="To" />
                        <TextBox
                            x:Name="TargetChineseTextBox"
                            Grid.Row="1"
                            MaxHeight="228"
                            AcceptsReturn="True"
                            PlaceholderText="" />
                    </Grid>
                </Grid>
                <Border
                    Grid.Row="1"
                    Height="1"
                    Margin="-24,24,-24,0"
                    HorizontalAlignment="Stretch"
                    Background="{ThemeResource MediaTransportControlsBorderBrush}" />
                <ProgressBar
                    x:Name="ProgressBar1"
                    Grid.Row="2"
                    Margin="-24,0,-24,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Background="Transparent" />
                <StackPanel
                    Grid.Row="2"
                    Margin="0,24,0,-4"
                    Orientation="Horizontal">
                    <Button x:Name="TransformChineseButton" Click="TransformChineseButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="-4,0,4,0"
                                    Text="ðŸ–¨ï¸"
                                    Visibility="Collapsed" />
                                <TextBlock x:Uid="S2T" Text="Simplifield to Tranditional" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button
                        x:Name="TransformChineseButton2"
                        Margin="8,0,0,0"
                        Click="TransformChineseButton2_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="-4,0,4,0"
                                    Text="ðŸ–¨ï¸"
                                    Visibility="Collapsed" />
                                <TextBlock x:Uid="T2S" Text="Tranditional to Simplifield" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
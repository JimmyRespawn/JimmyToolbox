                                            HorizontalAlignment="Left"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="Scripts Launcher"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />
                                        <TextBlock
                                            Margin="0,2,6,0"

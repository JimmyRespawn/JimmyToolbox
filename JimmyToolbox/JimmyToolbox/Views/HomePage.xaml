                </ScrollViewer>

                <TextBlock
                    x:Uid="Feedback"
                    Padding="36,0,0,0"
                    Style="{StaticResource SettingsSectionHeaderTextBlockStyle}"
                    Text="Feedback" />

                <Button
                    x:Name="IdeaButton"
                    Height="72"
                    Margin="36,4,0,0"
                    Click="IdeaButton_Click">

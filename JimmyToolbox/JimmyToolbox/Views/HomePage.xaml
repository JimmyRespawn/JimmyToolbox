                                            HorizontalAlignment="Left"
                                            Style="{StaticResource BodyTextBlockStyle}"
                                            Text="Shutdown Timer"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap" />
                                        <TextBlock
                                            Margin="0,2,6,0"

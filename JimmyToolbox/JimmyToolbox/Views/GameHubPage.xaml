<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="JimmyToolbox.Views.GameHubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:JimmyToolbox.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource LayerFillColorDefaultBrush}"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid Padding="0,0,0,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid x:Name="HeaderGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="204" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--<controls:HomePageHeaderImage
            Grid.RowSpan="2"
            Height="396"
            VerticalAlignment="Top" />-->
                <Image Source="/Assets/GameHeroImage.png" Stretch="UniformToFill" />
                <Grid Background="Black" Opacity="0.5" />
                <TextBlock AutomationProperties.AutomationId="__ClickableAreaTextBlock" />
                <StackPanel
                    Margin="36,0,0,0"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        x:Name="smallHeaderSubtitleText"
                        FontSize="18"
                        Foreground="White"
                        Opacity="0.8"
                        Text="Gamehub for XGP, Steam, Epic games etc" />
                    <TextBlock
                        x:Name="smallHeaderText"
                        Foreground="White"
                        Style="{StaticResource TitleLargeTextBlockStyle}"
                        Text="Game Launcher" />
                </StackPanel>
            </Grid>
            <StackPanel
                Grid.Row="1"
                Width="260"
                Margin="36,28,0,0"
                Padding="24"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{ThemeResource ButtonBackground}"
                BorderBrush="{ThemeResource MediaTransportControlsBorderBrush}"
                BorderThickness="1"
                CornerRadius="8">

                <TextBlock
                    Margin="0,0,0,16"
                    FontWeight="SemiBold"
                    Text="Multiplayer Games" />

                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Width="80"
                        VerticalAlignment="Center"
                        Text="COH3" />
                    <Border
                        Width="1"
                        Margin="12,0"
                        VerticalAlignment="Stretch"
                        Background="{ThemeResource MediaTransportControlsBorderBrush}" />
                    <Button Margin="4,0,0,0" Click="LaunchGameButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="-4,0,4,0" Text="ðŸŽ®" />
                                <TextBlock x:Name="WakeTextBlock" Text="Launch" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Margin="0,32,0,0" Orientation="Horizontal">
                    <TextBlock
                        Width="80"
                        VerticalAlignment="Center"
                        Text="CS2" />
                    <Border
                        Width="1"
                        Margin="12,0"
                        VerticalAlignment="Stretch"
                        Background="{ThemeResource MediaTransportControlsBorderBrush}" />
                    <Button Margin="4,0,0,0" Click="LaunchCS2Button_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="-4,0,4,0" Text="ðŸŽ®" />
                                <TextBlock Text="Launch" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Margin="0,32,0,0" Orientation="Horizontal">
                    <TextBlock
                        Width="80"
                        VerticalAlignment="Center"
                        Text="COD:BO6" />
                    <Border
                        Width="1"
                        Margin="12,0"
                        VerticalAlignment="Stretch"
                        Background="{ThemeResource MediaTransportControlsBorderBrush}" />
                    <Button Margin="4,0,0,0" Click="LaunchUWPGameButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="-4,0,4,0" Text="ðŸŽ®" />
                                <TextBlock Text="Launch" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <TextBlock
                    Margin="0,36,0,0"
                    FontWeight="SemiBold"
                    Text="Game Apps" />

                <StackPanel Margin="0,32,0,0" Orientation="Horizontal">
                    <TextBlock
                        Width="80"
                        VerticalAlignment="Center"
                        Text="Discord" />
                    <Border
                        Width="1"
                        Margin="12,0"
                        VerticalAlignment="Stretch"
                        Background="{ThemeResource MediaTransportControlsBorderBrush}" />
                    <Button Margin="4,0,0,0" Click="LaunchDiscordButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="-4,0,4,0" Text="ðŸ“±" />
                                <TextBlock Text="Launch" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
                <StackPanel Margin="0,32,0,0" Orientation="Horizontal">
                    <TextBlock
                        Width="80"
                        VerticalAlignment="Center"
                        Text="Netease UU" />
                    <Border
                        Width="1"
                        Margin="12,0"
                        VerticalAlignment="Stretch"
                        Background="{ThemeResource MediaTransportControlsBorderBrush}" />
                    <Button Margin="4,0,0,0" Click="LaunchUUButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="-4,0,4,0" Text="ðŸ“±" />
                                <TextBlock Text="Launch" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <TextBlock
                    Margin="0,36,0,0"
                    FontWeight="SemiBold"
                    Text="Singleplayer Game" />
                <StackPanel Margin="0,32,0,0" Orientation="Horizontal">
                    <TextBlock
                        Width="80"
                        VerticalAlignment="Center"
                        Text="Stalker 2" />
                    <Border
                        Width="1"
                        Margin="12,0"
                        VerticalAlignment="Stretch"
                        Background="{ThemeResource MediaTransportControlsBorderBrush}" />
                    <Button Margin="4,0,0,0" Click="LaunchUWPSingleGameButton_Click">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="-4,0,4,0" Text="ðŸŽ®" />
                                <TextBlock Text="Launch" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
